  "architecture": {
    "clientLayer": {
      "ios": {
        "framework": "SwiftUI",
        "database": "GRDB.swift",
        "vectorDb": "sqlite-vec",
        "graph": "LiteGraph",
        "mlRuntime": "ONNX Runtime Mobile",
        "sync": "PowerSync",
        "auth": "Clerk SDK",
        "crypto": "SQLCipher",
        "totalSize": "~268MB"
      },
      "android": {
        "framework": "Jetpack Compose",
        "database": "SQLDelight",
        "vectorDb": "sqlite-vec",
        "graph": "LiteGraph",
        "mlRuntime": "ONNX Runtime Mobile",
        "sync": "PowerSync",
        "auth": "Clerk SDK",
        "crypto": "SQLCipher",
        "totalSize": "~268MB"
      },
      "adminWeb": {
        "build": "Vite 5.x",
        "framework": "React 18",
        "routing": "TanStack Router",
        "state": "Zustand + TanStack Query",
        "ui": "Radix UI + Tailwind",
        "editor": "Monaco (lazy loaded)",
        "hosting": "Cloudflare Pages"
      }
    },
    "gatewayLayer": {
      "technology": "Go (Fiber) or Rust (Axum)",
      "agentEngine": "Moltbot",
      "responsibilities": [
        "Authentication (Clerk JWT validation)",
        "Rate Limiting",
        "Request Routing",
        "Agent State Machines",
        "Session Management",
        "Heartbeat/Cron Scheduling"
      ]
    },
    "databaseLayer": {
      "primary": {"technology": "DuckDB", "type": "file-based", "purpose": "User Auth, Subscriptions, Coach Metadata"},
      "vector": {"technology": "LanceDB", "type": "embedded, R2-backed", "purpose": "Embeddings"},
      "graph": {"technology": "KuzuDB", "type": "embedded", "purpose": "Relationships, Cypher queries"},
      "storage": {"technology": "S3/R2", "purpose": "PDFs, LoRA adapters"},
      "queue": {"technology": "NATS", "purpose": "Job queue, KV cache"}
    },
    "mlPipeline": {
      "pdfExtract": {"technology": "PyMuPDF", "cost": "$0"},
      "charts": {"technology": "Gemini Flash 3 API", "cost": "$0.0015/image"},
      "tables": {"technology": "Camelot-py", "cost": "$0"},
      "syntheticData": {"technology": "Kimi K2.5/Claude 3.5 API", "cost": "$0.50/M tokens"},
      "training": {"technology": "Unsloth QLoRA", "cost": "Compute only"}
    },
    "models": {
      "embedder": {"name": "Jina-v2-small INT8 + LoRA", "size": "45MB"},
      "reranker": {"name": "Zerank-1-small 4-bit + LoRA", "size": "120MB"},
      "ner": {"name": "GLiNER-Small ONNX INT8", "size": "20MB"},
      "reasoner": {"name": "Kimi K2.5 API", "type": "cloud"}
    }
  },
  "memoryArchitecture": {
    "threeLayers": {
      "knowledgeGraph": {
        "purpose": "Declarative memory (facts/entities)",
        "implementation": "life/ directory with structured JSON",
        "storage": "sqlite-vec + LiteGraph"
      },
      "dailyNotes": {
        "purpose": "Episodic memory (timeline)",
        "implementation": "Raw dated markdown",
        "storage": "sqlite-vec full-text"
      },
      "tacitKnowledge": {
        "purpose": "Procedural memory (user patterns)",
        "implementation": "Single markdown file",
        "storage": "Local file, synced selectively"
      }
    },
    "decayAlgorithm": {
      "hot": {"age": "0-7 days", "behavior": "Included in entity summary.md, high vector boost"},
      "warm": {"age": "8-30 days", "behavior": "Included in summary.md but lower priority"},
      "cold": {"age": "30+ days", "behavior": "Omitted from summary.md, only discoverable via explicit search"}
    },
    "atomicFactSchema": {
      "content": "string",
      "category": "milestone|skill|preference|relationship",
      "timestamp": "ISO8601",
      "source": "daily_note reference",
      "status": "active|superseded",
      "supersededBy": "reference or null",
      "relatedEntities": "array of entity paths",
      "lastAccessed": "ISO8601",
      "accessCount": "integer"
    }
  },
  "heartbeatSystem": {
    "roles": [
      {
        "name": "PARA Maintenance",
        "schedule": "0 2 * * 0",
        "description": "Weekly synthesis at Sunday 2 AM",
        "tasks": ["Apply decay algorithm", "Rewrite summary.md files", "Move completed Projects to Archive", "Rebuild sqlite-vec indices"]
      },
      {
        "name": "Fact Extraction",
        "schedule": "0 */6 * * *",
        "condition": "charging + WiFi",
        "tasks": ["Parse Daily Notes", "Run GLiNER NER", "Generate atomic facts", "Update LiteGraph edges"]
      },
      {
        "name": "Proactive Coaching",
        "schedule": "Dynamic (learned from Tacit Knowledge)",
        "tasks": ["Scan Projects with approaching deadlines", "Check Areas with stale access", "Deliver via local push notification"]
      },
      {
        "name": "Vector/Graph Refresh",
        "schedule": "0 3 * * 0",
        "tasks": ["Re-embed accessed Cold memories", "Optimize HNSW indices", "Prune orphaned edges"]
      }
    ]
  },
  "coachCreationPipeline": {
    "phases": [
      {
        "name": "Definition",
        "duration": "5 min",
        "steps": ["Form: Coach name, description, category tags", "Upload: Up to 10 PDFs (max 50MB)", "Extraction via smart routing", "Preview: 5 sample chunks", "Persona selection"]
      },
      {
        "name": "Personality Definition",
        "duration": "10 min",
        "steps": ["soul.md editor with templates", "agent.md editor (advanced)", "Examples folder: 3-5 Q&A pairs"]
      },
      {
        "name": "Dataset Generation",
        "duration": "20-40 min",
        "async": true,
        "tiers": {
          "fast": {"triplets": 5000, "cost": "$13"},
          "standard": {"triplets": 10000, "cost": "$26"},
          "deep": {"triplets": 20000, "cost": "$51"}
        }
      },
      {
        "name": "LoRA Training",
        "duration": "30 min",
        "gpu": true,
        "outputs": [
          {"name": "Embedding LoRA", "config": "r=16, alpha=32", "size": "8MB"},
          {"name": "Reranker LoRA", "config": "r=8, alpha=16", "size": "12MB"}
        ]
      },
      {
        "name": "Packaging & Deployment",
        "duration": "5 min",
        "steps": ["Compress text chunks (zstd)", "Upload to CDN (R2)", "Register in database", "Set pricing and publish"]
      }
    ],
    "costBreakdown": {
      "embeddingDataset": "$12.60",
      "rerankerDataset": "$10.00",
      "loraTrainingCompute": "$1.00",
      "totalPerCoach": "$23.60"
    }
  },
  "security": {
    "atRest": {
      "algorithm": "AES-256-GCM",
      "keyDerivation": "Argon2id (user passphrase + device hardware key)",
      "implementation": "SQLCipher"
    },
    "inTransit": {
      "protocol": "TLS 1.3",
      "certificate": "Let's Encrypt / Cloudflare Origin"
    },
    "e2eSync": {
      "algorithm": "XChaCha20-Poly1305",
      "keyExchange": "X25519 (ECDH)",
      "perfectForwardSecrecy": true
    },
    "sandboxing": {
      "layers": [
        {"method": "chroot + overlayfs + Landlock", "threat": "Filesystem escape"},
        {"method": "seccomp-bpf + capability dropping", "threat": "Privilege escalation"},
        {"method": "cgroups v2 (100MB RAM, 10 PIDs)", "threat": "Resource exhaustion"},
        {"method": "CLONE_NEWNET + eBPF whitelist", "threat": "Network exfiltration"},
        {"method": "DuckDB RLS + file permissions", "threat": "Data leakage (user A→B)"}
      ]
    }
  },
  "performance": {
    "targets": {
      "coldStart": "<2 seconds",
      "chatLatency": "<3 seconds (offline)",
      "syncSpeed": "<30 seconds for 1000 notes delta",
      "batteryDrain": "<2% daily for background heartbeat"
